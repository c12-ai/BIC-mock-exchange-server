# RabbitMQ connection
MOCK_MQ_HOST=localhost
MOCK_MQ_PORT=5672
MOCK_MQ_USER=guest
MOCK_MQ_PASSWORD=guest
MOCK_MQ_VHOST=/
MOCK_MQ_CONNECTION_TIMEOUT=30
MOCK_MQ_HEARTBEAT=60
MOCK_MQ_PREFETCH_COUNT=5

# MQ topology â€” single exchange, per-robot routing keys
MOCK_MQ_EXCHANGE=robot.exchange

# Timing (0.1 = 10x faster than real; 1.0 = realistic)
MOCK_BASE_DELAY_MULTIPLIER=0.1
MOCK_MIN_DELAY_SECONDS=0.5

# Scenarios
MOCK_DEFAULT_SCENARIO=success
MOCK_FAILURE_RATE=0.0
MOCK_TIMEOUT_RATE=0.0

# Images
MOCK_IMAGE_BASE_URL=http://minio:9000/bic-robot/captures

# Server
MOCK_SERVER_NAME=mock-robot-server
MOCK_ROBOT_ID=robot-001
MOCK_LOG_LEVEL=INFO

# Long task intermediate intervals (seconds at 1.0x)
MOCK_CC_INTERMEDIATE_INTERVAL=300
MOCK_RE_INTERMEDIATE_INTERVAL=300

# Heartbeat
MOCK_HEARTBEAT_INTERVAL=2.0
